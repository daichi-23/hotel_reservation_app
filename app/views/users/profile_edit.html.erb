<div class="container">

  <h2>設定</h2>

  <%= render "shared/error_messages", obj: @user %>

  <div class="user-container">
    <ul class="side-navi">
      <li class="side-navi-item"><%= link_to "アカウント", user_path(@user) %></li>
      <li class="side-navi-item"><%= link_to "プロフィール", users_profile_path(@user) %></li>
    </ul>
  
    <div class="account-information">
      <div class="account-information-header">
        <h2>プロフィール</h2>
      </div>      
      <div class="">
        <%= form_with model: @user, url: users_profile_edit_path, local: true do |f| %>
          <div class="account-information-item">
            <label class="account-information-label">アイコン画像</label>
            <%= f.file_field :image, id: :icon_image %>
            <p><%= f.check_box :remove_image %>画像を削除する</p>  <!--#カラムとコントローラーのパラメーターを追加しなきゃいけないかも-->
          </div>
          <div class="account-information-item">
            <label class="account-information-label">名前</label>
            <%= f.text_field :name %>
          </div>
          <div class="account-information-item">
            <label class="account-information-label">自己紹介</label>
            <%= f.text_area :introduction %>
          </div>
        
          <div class="actions">
            <%= f.submit "保存" %>
            <%= link_to "キャンセル", users_profile_path(@user) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
